{{> layout/header}}

<main class="main">
    <section class="container">
        <!--전체 리스트 시작-->
        <article class="story-list" id="storyList">
            {{#posts.content}}
                <div class="story-list__item">
                    <div class="sl__item__header">
                        <div>
                            <img class="profile-image" src="/images/person.jpeg" />
                        </div>
                        <div>{{post.user.nickname}}</div>
                        {{#isAuthor}}
                            <div class="post-options">
                                <button class="post-options-button">...</button>
                                <div class="post-options-dropdown" style="display: none;">
                                    <a href="/posting/{{post.postingId}}/update" class="dropdown-item">수정</a>
                                    <a href="#" onclick="deletePost({{post.postingId}})" class="dropdown-item">삭제</a>
                                </div>
                            </div>
                        {{/isAuthor}}
                    </div>
                    <div class="sl__item__img">
                        <img src="/upload/{{post.postImageUrl}}" alt="">
                    </div>
                    <div class="sl__item__contents">
                        <div class="sl__item__contents__icon">
                            <form id="likeForm-{{post.postingId}}" action="/post/{{post.postingId}}/like" method="POST">
                                <button type="button" class="like-button" data-posting-id="{{post.postingId}}">
                                    <i class="far fa-heart" id="storyLikeIcon-{{post.postingId}}"></i>
                                </button>
                            </form>
                        </div>
                        <span class="like"><b id="storyLikeCount-{{post.postingId}}">{{post.likeCount}} </b>likes</span>
                        <div class="sl__item__contents__content">
                            <p>{{post.content}}</p>
                        </div>
                        <div id="storyCommentList-{{post.postingId}}">
                            {{#post.comments}}
                                <div class="sl__item__contents__comment" id="storyCommentItem-{{id}}">
                                    <p>
                                        <b>{{user.userId}} :</b> {{content}}
                                    </p>
                                    <form id="deleteCommentForm-{{id}}" action="/comment/{{id}}/delete" method="POST" style="display:inline;">
                                        <button type="button" onclick="deleteComment({{id}})">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                </div>
                            {{/post.comments}}
                        </div>
                        <div class="sl__item__input">
                            <form id="commentForm-{{post.postingId}}" action="/post/{{post.postingId}}/comment" method="POST">
                                <input type="text" name="content" placeholder="댓글 달기..." id="storyCommentInput-{{post.postingId}}" class="comment-input" data-posting-id="{{post.postingId}}">
                                <button type="button" class="comment-submit" data-posting-id="{{post.postingId}}">게시</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/posts.content}}
        </article>
    </section>
</main>

{{#posts.hasNext}}
    <div id="load-more-container" style="text-align: center; margin-top: 20px;">
        <a href="/posting?page={{currentPage}}" class="load-more-button">더 보기</a>
    </div>
{{/posts.hasNext}}

<script src="/js/story.js"></script>

<script src="/js/sidebar.js"></script>
{{> layout/sidebar}}