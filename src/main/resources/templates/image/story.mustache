{{> layout/header}}

<main class="main">
    <section class="container">
        <!--전체 리스트 시작-->
        <article class="story-list" id="storyList">
            {{#posts.content}}
                <div class="story-list__item">
                    <div class="sl__item__header">
                        <div>
                            <img class="profile-image" src="/images/person.jpeg" />
                        </div>
                        <div>{{user.nickname}}</div>
                    </div>
                    <div class="sl__item__img">
                        <img src="/upload/{{postImageUrl}}" alt="">
                    </div>
                    <div class="sl__item__contents">
                        <div class="sl__item__contents__icon">
                            <form id="likeForm-{{postingId}}" action="/post/{{postingId}}/like" method="POST">
                                <button type="button" class="like-button" data-posting-id="{{postingId}}">
                                    <i class="far fa-heart" id="storyLikeIcon-{{postingId}}"></i>
                                </button>
                            </form>
                        </div>
                        <span class="like"><b id="storyLikeCount-{{postingId}}">{{likeCount}} </b>likes</span>
                        <div class="sl__item__contents__content">
                            <p>{{content}}</p>
                        </div>
                        <div id="storyCommentList-{{postingId}}">
                            {{#comments}}
                                <div class="sl__item__contents__comment" id="storyCommentItem-{{id}}">
                                    <p>
                                        <b>{{user.userId}} :</b> {{content}}
                                    </p>
                                    <form id="deleteCommentForm-{{id}}" action="/comment/{{id}}/delete" method="POST" style="display:inline;">
                                        <button type="button" onclick="deleteComment({{id}})">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                </div>
                            {{/comments}}
                        </div>
                        <div class="sl__item__input">
                            <form id="commentForm-{{postingId}}" action="/post/{{postingId}}/comment" method="POST">
                                <input type="text" name="content" placeholder="댓글 달기..." id="storyCommentInput-{{postingId}}" class="comment-input" data-posting-id="{{postingId}}">
                                <button type="button" class="comment-submit" data-posting-id="{{postingId}}">게시</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/posts.content}}
        </article>
    </section>
</main>

{{#posts.hasNext}}
    <div id="load-more-container" style="text-align: center; margin-top: 20px;">
        <button onclick="loadMoreStories()" id="load-more-button">더 보기</button>
    </div>
{{/posts.hasNext}}

<script src="/js/story.js"></script>