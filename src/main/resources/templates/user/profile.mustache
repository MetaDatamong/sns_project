        {{#posts}}
            <div class="profile-post-item">
                <img src="{{imageUrl}}" alt="게시물 이미지">
                <div class="profile-post-overlay">
                    <span><i class="fas fa-heart"></i> {{likeCount}}</span>
                    <span><i class="fas fa-comment"></i> {{commentCount}}</span>
                </div>
            </div>
        {{/posts}}
    </section>-->
</main>

